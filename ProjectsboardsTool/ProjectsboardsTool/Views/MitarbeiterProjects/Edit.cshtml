@model ProjectsboardsTool.Models.MitarbeiterProject

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>MitarbeiterProject</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @{
            ProjectsboardsTool.Data.ProjectsboardsToolContext ProjectsboardsToolContext = new ProjectsboardsTool.Data.ProjectsboardsToolContext();
            List<ProjectsboardsTool.Models.Projekt> Projects = ProjectsboardsToolContext.Projekts.ToList();
        }
        @Html.LabelFor(model => model.Project, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Project", new SelectList(Projects, "id", "Name"))
            @Html.ValidationMessageFor(model => model.Project, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @{
            List<ProjectsboardsTool.Models.Mitarbeiter> tasks = ProjectsboardsToolContext.Mitarbeiters.ToList();
        }
        @Html.LabelFor(model => model.Mitarbeiter, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Mitarbeiter", new SelectList(tasks, "id", "Name"))
            @Html.ValidationMessageFor(model => model.Mitarbeiter, "", new { @class = "text-danger" })
        </div>
    </div>>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
